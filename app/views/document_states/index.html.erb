<h1>Listing document_states</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Document state prev</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @document_states.each do |document_state| %>
  <tr>
    <td><%= document_state.name %></td>
    <td><%= document_state.document_state_prev.try(:name) %></td>

    <td><%= link_to 'Show', document_state %></td>
    <td><%= link_to 'Edit', edit_document_state_path(document_state) %></td>
    <td><%= link_to 'Destroy', document_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

